.login
  %h2 註冊
  %hr
  =button_to "Facebook 登入", user_omniauth_authorize_path(:facebook) ,:class => "btn btn-info"
  %hr
  = simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal' } do |f|
    = f.input :email, :input_html => { :class => "span12" }, :label => "Email："
    = f.input :password, :input_html => { :class => "span12" }, :label => "密碼："
    = f.input :password_confirmation, :input_html => { :class => "span12" }, :label => "再輸入一次密碼："
    .form-actions
      =f.button :submit,"註冊", :class => "btn btn-primary"
      = link_to "登入",new_user_session_path
