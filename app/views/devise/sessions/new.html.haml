.login
  %h2 登入
  %hr
  =button_to "Facebook 登入", user_omniauth_authorize_path(:facebook) ,:class => "btn btn-info"
  %hr
  = simple_form_for resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' } do |f|
    = f.input :email, :input_html => { :class => "span12" }, :label => "Email："
    = f.input :password, :input_html => { :class => "span12" }, :label => "密碼："
    - if devise_mapping.rememberable?
      = f.check_box :remember_me, :label => "remember_me"
      = f.label "記住我"
    .form-actions
      =f.button :submit,"登入", :class => "btn btn-primary"
      = link_to "註冊",new_registration_path(User.new)